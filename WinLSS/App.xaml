<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="WinLSS.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinLSS">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <SolidColorBrush x:Key="WindowCaptionBackground" Color="Transparent"/>
            <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled" Color="Transparent"/>
            <Style TargetType="TextBlock" x:Key="CaptionTextBlockStyle">
                <Setter Property="Foreground" Value="{ThemeResource TextFillColorTertiaryBrush}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
